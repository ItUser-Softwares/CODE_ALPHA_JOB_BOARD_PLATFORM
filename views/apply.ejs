<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Job Details</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }

    .job-header {
      background-color: #007bff;
      color: #fff;
      padding: 20px;
      border-radius: 5px;
    }

    .apply-btn {
      position: sticky;
      bottom: 20px;
      text-align: center;
    }
  </style>
</head>

<body>
  <div class="container my-5">
    <!-- Job Header -->
    <div class="job-header text-center mb-4">
      <h1 class="mb-3"><%= job.title %></h1>
      <p class="mb-1"><strong>Company:</strong><%= job.companyName %></p>
      <p class="mb-1"><strong>Salary:</strong><%= job.salary %></p>
      <p class="mb-0"><strong>Posted on:</strong> <%= job.createdAt %></p>
    </div>

    <!-- Job Description -->
    <div class="card mb-4">
      <div class="card-body">
        <h3 class="card-title">Job Description</h3>
        <p><%= job.description %></p>
      </div>
    </div>

    <!-- Job Requirements -->
    <div class="card mb-4">
      <div class="card-body">
        <h3 class="card-title">Requirements</h3>
        <p><%= job.requirements %></p>
      </div>
    </div>

    <!-- Apply Button -->
     <% if (!isUploader) {%>
    <div class="apply-btn">
      <button class="btn btn-success btn-lg w-100" data-bs-toggle="modal" data-bs-target="#applyModal">Apply Now</button>
    </div>
    <% } %>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="applyModal" tabindex="-1" aria-labelledby="applyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="applyModalLabel">Apply for Job</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="applicationForm" method="post" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="applicantName" class="form-label">Your Name</label>
              <input type="text" class="form-control" id="applicantName" name="applicantName" required>
            </div>
            <div class="mb-3">
              <label for="applicantEmail" class="form-label">Your Email</label>
              <input type="email" class="form-control" id="applicantEmail" name="applicantEmail" required>
            </div>
            <div class="mb-3">
              <label for="resume" class="form-label">Upload Resume</label>
              <input type="file" class="form-control" id="resume" name="resume" accept=".doc,.pdf,.docx" required>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" form="applicationForm" class="btn btn-primary">Submit Application</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
