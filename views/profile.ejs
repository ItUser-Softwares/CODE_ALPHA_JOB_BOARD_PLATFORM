<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      padding: 20px;
    }

    .profile-img {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 15px;
    }

    .btn-group-vertical {
      width: 100%;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center">
        <h1 class="my-4">Profile Page</h1>
        <!-- Profile Image -->
        <img src="<%= user.imagePath %>" alt="Profile Picture" class="profile-img border border-secondary">
        <!-- Profile Information -->
        <div class="mt-3">
          <h3 class="text-primary">Name : <%= user.name %>
          </h3>
          <p class="text-secondary">Email : <%= user.email %>
          </p>
          <p class="text-secondary">Info : <%= user.info %>
          </p>
        </div>
        <!-- Profile Buttons -->
        <div class="mt-4">
          <div class="btn-group-vertical">
            <button class="btn btn-primary mb-2 position-relative" onclick="document.location='/profile/notifications'">
              Notifications
              <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                <%= notifications %>
                  <span class="visually-hidden">unread messages</span>
              </span>

            </button>

            <button class="btn btn-secondary mb-2" onclick="document.location='/profile/listings'">Job Listings</button>
            <button class="btn btn-success mb-2" onclick="document.location = '/jobs'">Create Job</button>
            <button class="btn btn-success mb-2" data-bs-toggle="modal" data-bs-target="#editProfileModal">Edit
              Profile</button>
            <button class="btn btn-danger" onclick="document.location='/profile/logout'">Logout</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editProfileModalLabel">Edit Profile</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input value="<%= user.name %>" type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
              <label for="age" class="form-label">Age</label>
              <input value="<%= user.age %>" type="number" class="form-control" id="age" name="age" required>
            </div>
            <div class="mb-3">
              <label for="info" class="form-label">Info</label>
              <textarea class="form-control" id="info" name="info" rows="3" required><%= user.info %></textarea>
            </div>
            <div class="mb-3">
              <label for="profileImage" class="form-label">Profile Image</label>
              <input type="file" class="form-control" id="profileImage" name="profileImage" accept="image/*">
            </div>
            <div class="mb-3">
              <label for="resume" class="form-label">Resume</label>
              <input type="file" class="form-control" id="resume" name="resume" accept=".pdf,.doc,.docx">
            </div>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>